    <link rel="stylesheet" href="~/assets/scss/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->
</head>
<body class="bg-dark">

    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                   
                        <img class="align-content" src="~/assets/Image/anoutsithlogo.png" height="70" alt="">
                
                </div>
                <div class="login-form">
                    <form>
                        <div class="form-group">
                            <label>ຊື່ບັນຊີ</label>
                            <input type="text" name="username" class="form-control" placeholder="ຊື່ບັນຊີ">
                        </div>
                        <div class="form-group">
                            <label>ລະຫັດຜ່ານ</label>
                            <input type="password" name="password" class="form-control" placeholder="ລະຫັດຜ່ານ">
                        </div>
                        <button type="button" onclick="LogIn()" class="btn btn-danger btn-flat m-b-30 m-t-30">ເຂົ້າສູ່ລະບົບ</button> 
                        <hr />
                        <div class="register-link mt-3 text-center">
                            <p>ລ໋ອກອີນໃນສະຖານະລຸກຄ້າ <a href="@Url.Action("CLogin","Account")"> ກົດບ່ອນນີ້</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div id="content" class="text-center">
                        <strong>ຊື່ບັນຊີ ແລະ ລະຫັດຂອງທ່ານຜິດ ກະລຸນາກວດໃຫມ່ອີກຄັ້ງ</strong>
                    </div>
                    <div>
                        <button class="btn btn-primary btn-flat m-b-15 w-100" data-dismiss="modal">ອອກ</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script src="~/assets/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/main.js"></script>
    <script>
        function LogIn() {
            let username = jQuery('input[name="username"]').val();
            let password = jQuery('input[name="password"]').val();
            jQuery.ajax({
                url: "/Account/LoginForUser",
                data: {
                    username: username,
                    password: password
                },
                type: "POST",
                datatype: "json",
                success: function (r) {
                    if (r==="Admin") {
                        window.location = "@Url.Action("Index","Admin")";
                    }
                    else if (r==="Officer") {
                        window.location = "@Url.Action("Index","Admin")";
                    }
                    else if (r ==="Delivery") {
                         window.location = "@Url.Action("Index","Delivery")";
                    }
                    else {
                        jQuery('#modal1').modal("show");
                    }
                },
                error: function () {
                    alert("Server error");
                }
            });

        }
    </script>
</body>
</html>

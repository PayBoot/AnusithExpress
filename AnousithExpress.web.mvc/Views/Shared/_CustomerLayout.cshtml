    <script>
        var itemNum = 0;
        jQuery(document).ready(function () {
            notificationNum();
            setInterval(notificationNum, 10000);
            jQuery("#searchTextBox").keypress(function (e) {
                if (event.which==13) {
                    jQuery.ajax({
                        url: "/Admin/searchBox",
                        data: { input: jQuery(this).val() },
                        datatype: "json",
                        type: "GET",
                        success: function (r) {
                            if (r.t===1 && r.id>0) {
                                window.location = '@Url.Action("CustomerItemList","Admin")?customerId=' + r.id +'&tabIndex=5';
                            }
                            if (r.t===2 && r.id>0) {
                                window.location = '@Url.Action("ItemsDetail", "Admin")?itemId=' +  r.id;
                            }
                            else {
                                jQuery("#modalsearchMessage").html("ບໍ່ສາມາດຊອກລາຍການດັ່ງກ່າວຢູ່ຖານຂໍ່ມູນ");
                                jQuery("#modalNotification2").modal("show");
                            }
                        }
                    });
                }

            });
        });
        function notificationNum() {
            jQuery.ajax({
                url: "/Admin/GetNotification",
                type: "GET",
                datatype: "json",
                success: function (r) {
                    jQuery("#notificationNumber").html(r);
                    itemNum = r;
                }
            });
        }
    </script>


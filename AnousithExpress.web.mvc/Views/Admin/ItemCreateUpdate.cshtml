
@{
    ViewBag.Title = "CreateUpdateItems";
}
@model AnousithExpress.DataEntry.ViewModels.Customer.ItemsModel
<h2>ສ້າງແລະບັນທຶກລາຍການສີນຄ້າ</h2>
<div class="panel">
    <div class="panel-body">
        @using (Html.BeginForm("ItemCreateUpdate", "Admin", FormMethod.Post, new { @id = "ItemCreateForm" }))
        {
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                @Html.Label("ເບີໂທລຸກຄ້າ ຫລືລະຫັດລຸກຄ້າ")
                @Html.TextBoxFor(m => m.CustomerPhonenumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CustomerPhonenumber, "", new { @class = " red-font" })
            </div>
            <div class="form-group">
                @Html.Label("ປະເພດສີນຄ້າ")
                @Html.TextBoxFor(m => m.ItemName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ItemName, "", new { @class = " red-font" })
            </div>
            <div class="form-group">
                @Html.Label("ຊື່ຜູ້ຮັບ")
                @Html.TextBoxFor(m => m.ReceiverName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ReceiverName, "", new { @class = " red-font" })
            </div>
            <div class="form-group">
                @Html.Label("ເບີໂທຜູ້ຮັບ")
                @Html.TextBoxFor(m => m.ReceipverPhone, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ReceipverPhone, "", new { @class = " red-font" })
            </div>
            <div class="form-group">
                @Html.Label("ເບີໂທຜູ້ຮັບ")
                @Html.DropDownListFor(m => m.Status, ViewBag.Statuses as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Status, "", new { @class = " red-font" })
            </div>
            <div class="form-group">
                @Html.Label("ທີ່ຢູ່ຜູ້ຮັບ")
                @Html.TextBoxFor(m => m.ReceiverAddress, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ReceiverAddress, "", new { @class = " red-font" })
            </div>
            <div class="form-group">
                @Html.Label("ເກັບເງີນປາຍທາງ ສະກຸນເງີນກີບ")
                @Html.TextBoxFor(m => m.ItemValue_Kip, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("ເກັບເງີນປາຍທາງ ສະກຸນເງີນບາດ")
                @Html.TextBoxFor(m => m.ItemValue_Baht, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("ເກັບເງີນປາຍທາງ ສະກຸນເງີນໂດລ້າ")
                @Html.TextBoxFor(m => m.ItemValue_Dollar, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("ລາຍລະອຽດເພີ່ມເຕີມ")
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">ບັນທຶກລາຍການ</button>
            <a class="btn btn-info" href="@Url.Action("Index","Admin")">ກັບໄປຫນ້າຫລັກ</a>
            if (Model.Id != null)
            {
                <a class="btn btn-success" href="@Url.Action("ItemDelete","Admin", new { itemId = Model.Id })">ລືບ</a>
            }

           
        }
    </div>

    <div>
        <label>ສາຍສົ່ງ</label>
        @Html.DropDownList("routeId", ViewBag.Routes as SelectList)
        <label>ເວລາສົ່ງ</label>
        @Html.DropDownList("timeId", ViewBag.Times as SelectList)
        <label>ວັນທີສົ່ງ</label>
        <input type="date" name="dateToDeliverFrom" />
        <button type="button" class="btn btn-primary" onclick="AssignRoute()">ເລືອກເສັ້ນທາງ</button>
    </div>
</div>

@section scripts{
    <script>
        function AssignRoute() {
            if (confirm("ດຳເນີນການຕໍ່?")) {
                alert("ສຳເລັດ");
            }
        }
    </script>
    }


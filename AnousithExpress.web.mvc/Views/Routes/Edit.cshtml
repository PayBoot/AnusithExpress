@model AnousithExpress.DataEntry.Models.TbRoute

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}


<h4>ປ່ຽນແປງສາຍສົ່ງ</h4>         
        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
          
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label class="control-label col-md-2">ສາຍສົ່ງ</label>
                <div>
                    @Html.EditorFor(model => model.Route, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Route, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="ບັນທຶກ" class="btn btn-danger" />
                </div>
            </div>
        </div>
}

        <div>
            @Html.ActionLink("ກັບຄືນ", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }



@model IEnumerable<AnousithExpress.DataEntry.Models.TbRoute>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}


<div class="panel" style=" padding:20px;">
    <div class="panel panel-heading"></div>
    <div class="panel panel-body" style=" background-color:white;">

        <p>
            <a class=" btn btn-primary" href="@Url.Action("Create","Routes")">ສ້າງລາຍການ</a>
          
        </p>
        <table class="table table-bordered">
            <tr>,
                <th>
                    <label>ເສັ້ນທາງ</label>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Route)
                </td>
                <td>

                    @Html.ActionLink("ແກ້ໄຂ", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("ລາຍການ", "Details", new { id = item.Id }) |
                    @Html.ActionLink("ລືບ", "Delete", new { id = item.Id })
                </td>
            </tr>
    }

        </table>


    </div>
</div>